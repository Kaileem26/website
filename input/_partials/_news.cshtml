@inherits Statiq.Razor.StatiqRazorPage<IEnumerable<IDocument>>

@foreach (IDocument item in Model)
{
    @if (!String.IsNullOrEmpty(item.GetString(WebKeys.Title)))
    {
        <div class="latest_container latest_container--news">
            <div class="latest_date d-flex align-items-center justify-content-center text-center newstype-@item.GetString(SiteKeys.Type)"><span>@item.GetString(SiteKeys.Source)</span></div>
            <div class="latest_meta d-flex flex-column justify-content-center">
                <h3 class="latest_title"><a href="@item.GetString(SiteKeys.Link)" title="@item.GetString(SiteKeys.Source)">@item.GetString(WebKeys.Title)</a></h3>
                <p class="latest_copy">
                    @item.GetString(SiteKeys.Excerpt)
                </p>
            </div>
        </div>
    }
}
